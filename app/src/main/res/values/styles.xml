<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:typeface">sans</item>

        <!--Preference-->
        <item name="preferenceTheme">@style/PreferenceThemeOverlay.v14.Material</item>
        <item name="alertDialogTheme">@style/AppAlertDialog</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <!--setting-->
    <style name="AppTheme.SettingsTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="titleTextStyle">@color/colorTitleText</item>
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">#ffffffff</item>
    </style>

    <style name="AppTheme.SettingsTheme.Toolbar" parent="AppTheme.SettingsTheme">
        <item name="android:textColorPrimary">#ffffffff</item>
    </style>


    <style name="AppAlertDialog" parent="Theme.AppCompat.DayNight.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--Font Styles-->
    <style name="MyFontStyleBase">
        <item name="android:fontFamily">sans-serif</item>
    </style>

    <style name="MainDisplayData" parent="MyFontStyleBase">
        <item name="android:textColor">#e6ffffff</item>
        <item name="android:textSize">18sp</item>
        <item name="android:layout_marginRight">1dp</item>
    </style>

    <style name="tempStyle" parent="MyFontStyleBase">
        <item name="android:textColor">#ffffff</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:fontFamily">sans-serif-light</item>
        <item name="android:textSize">@dimen/abc_text_size_display_2_material</item>
    </style>

    <style name="LabelStyle" parent="MyFontStyleBase">
        <item name="android:textColor">@color/iconLabelColor</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
        <item name="android:shadowColor">@color/iconLabelColorShadow</item>
        <item name="android:shadowRadius">1</item>
    </style>

    <style name="DayLabelStyle" parent="LabelStyle">
        <item name="android:textColor">#c8ffffff</item>
        <item name="android:fontFamily">sans-serif</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="CityLabelStyle" parent="MyFontStyleBase">
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
    </style>
    <!--Font Styles End



    -->


    <style name="cityStyleCard" parent="@android:style/TextAppearance.Medium">
        <item name="android:textStyle">normal</item>
        <item name="android:textColor">#55ffffff</item>
    </style>


    <!--outer-->
    <style name="card_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_alignParentLeft">true</item>
        <item name="android:background">@drawable/tint_black</item>
        <item name="android:layout_alignParentTop">true</item>
        <item name="android:padding">5dp</item>

    </style>

    <style name="card_outer_style" parent="CardView">
        <item name="cardBackgroundColor">?attr/colorPrimary</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">170dp</item>
        <item name="android:background">@drawable/card_colour</item>
        <item name="android:layout_margin">5dp</item>
    </style>

    <style name="list_card_style" parent="card_outer_style">
        <item name="cardCornerRadius">2dp</item>
        <item name="cardPreventCornerOverlap">true</item>
    </style>

    <style name="my_card_style" parent="card_outer_style">
        <item name="android:layout_width">match_parent</item>
    </style>

    <style name="timeline_first_max_temp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
        <item name="android:textColor">@color/timelineFirstMaxTempColor</item>
    </style>

    <style name="timeline_first_min_temp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/abc_text_size_medium_material</item>
        <item name="android:textColor">@color/timelineFirstMinTempColor</item>
    </style>

    <style name="timeline_first_main_temp">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/timelineFirstMainTempColor</item>
        <item name="android:textSize">@dimen/abc_text_size_display_2_material</item>
    </style>

    <style name="timeline_sunrise">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/timelineFirstSunriseTempColor</item>
    </style>

    <style name="timeline_sunset">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/timelineFirstSunsetTempColor</item>
    </style>

    <style name="timeline_day_time">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
        <item name="android:textColor">@color/timelineTimeDay</item>
    </style>

    <style name="timeline_day">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textSize">@dimen/abc_text_size_large_material</item>
        <item name="android:textColor">@color/timelineTimeDay</item>

    </style>
</resources>
